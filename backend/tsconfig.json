{
    "compilerOptions": {
      "target": "es2015",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./src",
      "typeRoots": [
        "./node_modules/@types",
        "./src/types"
      ]
    },
    "include": [
      "src/**/*", 
      "src/types/**/*.d.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }